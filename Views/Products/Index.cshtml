@model IEnumerable<admin.Models.Product>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<div style="display: flex; justify-content: space-between; align-items: center;">
    <p>
        <a asp-action="Create">Skapa ny produkt</a>
    </p>
    <p>
        <a asp-controller="Categories" asp-action="Index">Se alla kategorier</a>
    </p>

</div>

<div class="search-products">
    <form method="post" class="search-form d-flex" asp-controller="Products" asp-action="IndexWithSearch">
        <i class="fa-solid fa-magnifying-glass mt-2 mx-2"></i>
        <input class="form-control mr-sm-2" type="search" placeholder="Sök produkt" aria-label="Sök"
            name="searchString">
        <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Sök</button>
    </form>
</div>

<div class="table-responsive">
    <table class="table table-striped table-hover">
        <thead class="table-light">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.TypeOfProduct)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Price)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Size)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Color)
                </th>
                <th class="d-none d-md-table-cell">
                    @Html.DisplayNameFor(model => model.Description)
                </th>
                <th class="d-none d-md-table-cell">
                    @Html.DisplayNameFor(model => model.ImageName)
                </th>
                <th class="d-none d-md-table-cell">
                    @Html.DisplayNameFor(model => model.IsSold)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Seller)
                </th>
                <th class="d-none d-md-table-cell">
                    @Html.DisplayNameFor(model => model.Category)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.TypeOfProduct)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Price)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Size)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Color)
                    </td>
                    <td class="d-none d-md-table-cell">
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                    <td class="d-none d-md-table-cell">
                        <a href="@Url.Content("~/images/" + item.ImageName)" target="_blank">
                            <img class="img-fluid" style="width: 50px" src="@Url.Content("~/images/" + item.ImageName)"
                                alt="Bild på produkt">
                        </a>

                    </td>
                    <td class="d-none d-md-table-cell">
                        @Html.DisplayFor(modelItem => item.IsSold)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Seller.SellerName)
                    </td>
                    <td class="d-none d-md-table-cell">
                        @Html.DisplayFor(modelItem => item.Category.Name)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.ProductId">Ändra</a> |
                        <a asp-action="Details" asp-route-id="@item.ProductId">Detaljer</a> |
                        <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@item.ProductId">Radera</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
