@model IEnumerable<admin.Models.Seller>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Skapa ny säljare</a>
</p>

<!--searchform-->
<div class="search-sellers">
    <form method="post" class="search-form d-flex" asp-controller="Sellers" asp-action="IndexWithSearch">
        <i class="fa-solid fa-magnifying-glass mt-2 mx-2"></i>
        <input class="form-control mr-sm-2" type="search" placeholder="Sök säljare" aria-label="Sök" name="searchString">
        <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Sök</button>
    </form>
</div>

<div class="table-responsive">
<table class="table table-striped table-hover">
    <thead class="table-light">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.SellerName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SellerPhoneNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SellerAdress)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.SellerName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SellerPhoneNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SellerAdress)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.SellerId">Ändra</a> |
                <a asp-action="Details" asp-route-id="@item.SellerId">Detaljer</a> |
                <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@item.SellerId">Radera</a>
            </td>
        </tr>
}
    </tbody>
</table>
</div>
